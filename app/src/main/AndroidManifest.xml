<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SotMAsia2024"
        tools:targetApi="31">
        <activity
            android:name=".land.SquareActivity"
            android:exported="false" />
        <activity
            android:name=".land.CircleActivity"
            android:exported="false" />
        <activity
            android:name=".land.OblongActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".CompassActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.App.NoActionBar" />
        <activity
            android:name=".GenarelActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".SoilActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".RodActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".TimberActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".GoldActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SotMAsia2024">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".BasicalculatorActivity"
            android:exported="false"
            android:label="@string/title_activity_basicalculator"
            android:theme="@style/Theme.SotMAsia2024" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SotMAsia2024.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>